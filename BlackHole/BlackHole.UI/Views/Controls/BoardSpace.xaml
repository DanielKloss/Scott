<UserControl
    x:Name="control"
    x:Class="BlackHole.UI.Views.Controls.BoardSpace"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlackHole.UI.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    AllowDrop="True"
    DragOver="control_DragOver"
    Drop="control_Drop">

    <Grid>
        <Ellipse Width="50" Height="50" Stroke="Black" StrokeThickness="3" Fill="{Binding ContainingPiece.player, ElementName=control, Converter={StaticResource playerColourConverter}}"/>
        <TextBlock Text="{Binding ContainingPiece.pieceValue, ElementName=control, Mode=TwoWay}" Style="{StaticResource PieceTextStyle}"/>
    </Grid>
</UserControl>
